  <h1>üéµ YouTube Lyrics Megjelen√≠t≈ë</h1>
  <input type="text" id="youtubeUrl" placeholder="YouTube link" style="width: 60%;">
  <button onclick="loadVideo()">Lej√°tsz√°s + Lyrics</button>
  <div id="player"></div>
  <div id="lyrics">üé∂ Itt fog megjelenni a dalsz√∂veg...</div>
  <script>
    let player;
    function extractVideoId(url) {
      const match = url.match(/(?:v=|\\.be\\/)([a-zA-Z0-9_-]{11})/);
      return match ? match[1] : null;
    }
    function onYouTubeIframeAPIReady() {
      player = new YT.Player('player', {height:'360', width:'640', videoId: ''});
    }
    function loadVideo() {
      const url = document.getElementById('youtubeUrl').value;
      const vid = extractVideoId(url);
      if (!vid) return alert("Nem √©rv√©nyes YouTube link.");
      player.loadVideoById(vid);
      fetch(`https://noembed.com/embed?url=https://www.youtube.com/watch?v=${vid}`)
        .then(res=>res.json())
        .then(data=>{
          const parts = data.title.split(" - ");
          const artist = parts[0] || '';
          const title = (parts[1]||'').replace(/\\(.*?\\)/g,'').trim();
          document.getElementById("lyrics").innerText = "üîç Bet√∂lt√©s...";
          fetch(`https://api.lyrics.ovh/v1/${encodeURIComponent(artist)}/${encodeURIComponent(title)}`)
            .then(r=>r.json())
            .then(d=> {
              document.getElementById("lyrics").innerText = d.lyrics || "‚ùå Nincs lyrics.";
            })
            .catch(()=> {
              document.getElementById("lyrics").innerText = "‚ö†Ô∏è Hiba a lek√©r√©sn√©l.";
            });
        });
    }
  </script>
